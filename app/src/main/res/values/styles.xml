<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_style" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:layout_margin">@dimen/default_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="sub_title_style" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sub_title_size</item>
    </style>

    <style name="clickable_text">
        <item name="drawableStartCompat">@android:drawable/ic_menu_search</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
